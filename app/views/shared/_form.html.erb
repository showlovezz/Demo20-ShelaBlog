<%= form_for post do |f| %>

  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "errors") %> prohibitedthis post from being saved:</h2>
      <ul>
        <% post.errors_full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

	<%= f.label :title, "Title" %>
	<%= f.text_field :title %>

	<%= f.label :body, "Body" %>
	<%= f.text_field :body %>

	<%= f.label :description, "Description" %>
	<%= f.text_field :description %>

  <%= f.label :image, "Photo" %>
  <%= image_tag @post.image, width: '300px' if @post.image? %>
  <%= f.file_field :image %>

	<%= f.submit %>
<% end %>