<% @posts.each do |post| %>
  <div class="col-sm-6 col-lg-4">
    <div class="card-deck">
      <div class="card">
        <img class="card-img-top" src="https://source.unsplash.com/1600x900/?beaches" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text"><%= truncate(post.description, length: 150) %></p>
          <%= link_to '讀更多', post_path(post), class: "badge badge-primary" %>
        </div>
        <div class="card-footer">
          <small class="text-muted"><%= time_ago_in_words(post.created_at) %> ago</small>
        </div>
      </div>
    </div>
  </div>
<% end %>